<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Categories</title>
    <link rel="icon" type="image/png" href="/BookSwapHubLogo.png">
    <style>
        :root {
            --bg-color: #121212;
            --navbar-bg-color: #1e1e1e;
            --primary-color: #6200ee;
            --primary-hover-color: #3700b3;
            --text-color: #fff;
            --input-bg-color: #2c2c2c;
            --input-border-color: #444;
            --header-bg-color: #1e1e1e;
            --active-color: #bb86fc;
        }

        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: var(--bg-color);
            color: var(--text-color);
        }

        .navbar {
            background-color: var(--navbar-bg-color);
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
        }

        .navbar .current-page {
            font-size: 1.2rem;
            font-weight: bold;
            color: var(--active-color);
        }

        .navbar .nav-links {
            display: flex;
            gap: 10px;
        }

        .navbar a {
            color: var(--text-color);
            text-decoration: none;
            padding: 10px 15px;
            transition: background-color 0.3s;
        }

        .navbar a:hover {
            background-color: var(--primary-hover-color);
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 0 20px;
        }

        .category-list {
            list-style: none;
            padding: 0;
        }

        .category-item {
            background-color: var(--header-bg-color);
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .category-item form {
            display: inline;
        }

        .category-item button {
            padding: 8px 16px;
            margin: 0 5px;
            border: none;
            border-radius: 5px;
            background-color: var(--primary-color);
            color: var(--text-color);
            cursor: pointer;
            font-size: 1rem;
        }

        .category-item button:hover {
            background-color: var(--primary-hover-color);
        }

        .add-category-form {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .add-category-input {
            flex: 1;
            padding: 10px;
            border: 1px solid var(--input-border-color);
            border-radius: 5px;
            background-color: var(--input-bg-color);
            color: var(--text-color);
            margin-right: 10px;
        }

        .add-category-button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: var(--primary-color);
            color: var(--text-color);
            cursor: pointer;
            font-size: 1rem;
        }

        .add-category-button:hover {
            background-color: var(--primary-hover-color);
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="current-page">Manage Categories</div>
        <div class="nav-links">
            <a href="/admin/dashboard">Dashboard</a>
            <a href="/admin/categories">Manage Categories</a>
            <a href="/admin/add-book">Add Book</a>
            <a href="/admin/logout">Logout</a>
        </div>
    </nav>
    <div class="container">
        <form class="add-category-form" action="/admin/categories/" method="POST">
            <input type="text" class="add-category-input" name="name" placeholder="New category name" required>
            <button type="submit" class="add-category-button">Add Category</button>
        </form>
        <ul class="category-list">
            <% categories.forEach(category => { %>
                <li class="category-item">
                    <span><%= category.name %></span>
                    <form action="/admin/categories/delete/<%= category.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this category?');">
                        <button type="submit">Delete</button>
                    </form>
                </li>
            <% }); %>
        </ul>
    </div>
</body>
</html>
